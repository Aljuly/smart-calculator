<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
	http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"  version="3.1">

  <resource-ref>
    <description>postgreSQL Datasource example</description>
    <res-ref-name>jdbc/postgres</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>

  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>ua.com.foxminded.calculator.servletes.LoginServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>ua.com.foxminded.calculator.servletes.RegisterServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>DescriptionServlet</servlet-name>
    <servlet-class>ua.com.foxminded.calculator.servletes.DescriptionServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>DBMonitorServlet</servlet-name>
    <servlet-class>ua.com.foxminded.calculator.servletes.DBMonitorServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/users/authenticate</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>RegisterServlet</servlet-name>
    <url-pattern>/users/register</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>DescriptionServlet</servlet-name>
    <url-pattern>/description</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>DBMonitorServlet</servlet-name>
    <url-pattern>/poolmonitor</url-pattern>
  </servlet-mapping>

</web-app>
